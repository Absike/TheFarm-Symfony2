<form accept-charset="UTF-8" role="form" action="{{ path("signup") }}" method="post" class="register-form" {{ form_enctype(form_signup) }}>
    <h3>Sign Up</h3>

    <p class="hint">
        Enter your personal details below:
    </p>

    {{ form_errors(form_signup) }}

    <div class="form-group">
        {{ form_widget(form_signup.first_name, {'attr': {'class': 'form-control placeholder-no-fix' , 'placeholder':'First name' }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form_signup.last_name, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Last name' }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form_signup.email, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Email' }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form_signup.phone, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Phone' }}) }}
    </div>

    <p class="hint">
        Enter your account details below:
    </p>

    <div class="form-group">
        {{ form_widget(form_signup.username, {'attr': {'class': 'form-control placeholder-no-fix' , 'placeholder':'Username' , 'autocomplete':'off' }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form_signup.password.first, {'attr': {'class': 'form-control placeholder-no-fix' , 'placeholder':'Password' , 'autocomplete':'off' }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form_signup.password.second, {'attr': {'class': 'form-control placeholder-no-fix' , 'placeholder':'Re-type Your Password' , 'autocomplete':'off' }}) }}
    </div>

    <div class="form-actions">
        <button type="button" id="register-back-btn" class="btn btn-default">Back</button>
        <button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Submit</button>
    </div>
</form>