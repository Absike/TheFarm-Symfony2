{% extends "PapillonUserBundle::layout.html.twig" %}

{% block title %}Papillon | Tasks {% endblock title %}

{% block content %}
    <fieldset>
        <blockquote>
            <h2>New Task</h2>
        </blockquote>
        <form id="contact" method="post" class="{{ path('new_task') }}" role="form">

            {{ form_errors(form) }}

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
                    {{ form_label(form.priority) }}
                    {{ form_widget(form.priority,{'attr': {'class': 'form-control' }}) }}
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
                    {{ form_label(form.status) }}
                    {{ form_widget(form.status,{'attr': {'class': 'form-control' }}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}

            </div>

            <button class="btn btn-primary pull-right" type="submit">Submit</button>

        </form>

    </fieldset>
{% endblock %}
