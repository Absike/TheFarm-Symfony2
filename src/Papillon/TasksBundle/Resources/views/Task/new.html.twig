{% extends "PapillonTasksBundle::layout.html.twig" %}

{% block title %}Papillon | New tasks {% endblock title %}

{% block content %}


    <blockquote>
        <h2>New task</h2>
    </blockquote>

    <div class="row">
        <div class="col-md-11">
            <form class="form-horizontal" role="form" action="{{ path('new_task') }}" method="post">
                <fieldset>

                    {{ form_errors(form) }}

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Priority:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.priority,{'attr': {'class': 'form-control' }}) }}
                        </div>

                        <label class="col-sm-2 control-label" for="textinput">Status:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.status,{'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput"></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.author, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Description:</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                                <a class="btn btn-default" href="{{ path('tasks') }}">Cancel</a>
                                <button type="submit" class="btn btn-info">Save</button>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div><!-- /.col-lg-12 -->
    </div><!-- /.row -->
{% endblock %}


