{% extends "PapillonTasksBundle::layout.html.twig" %}

{% block title %}Papillon | Tasks {% endblock title %}

{% block content %}

    <div class="container">

        <div class="newtask">
            <h2>mes activités</h2>
        </div>

        <table id="example" class="display" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>{{ 'dateCreated'|trans }}</th>
                <th>Temps passé</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            {% for item in tasks %}
                <tr>
                    <td>{{ item.createdAt|date('Y-m-d') }}</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar progress-bar-info" style="width: {{ item.timeSpent }}%;"></div>
                        </div>
                    </td>
                    <td>
                        <span class="label label-{{ item.priority }}">{{ item.priority|trans }}</span>
                        <span class="label label-{{ item.priority }}">{{ item.status }}</span>
                    </td>
                    <td>
                        <div class="text-right">
                            <a href="#">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                            <a href="#">
                                <span class="glyphicon glyphicon-remove-sign"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        </div>


    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            $('#example').dataTable();


            // For demo to fit into DataTables site builder...
            $('#example')
                    .removeClass( 'display' )
                    .addClass('table table-striped table-bordered');
        } );
    </script>
{% endblock %}
