{% extends "PapillonTasksBundle::layout.html.twig" %}

{% block title %}Papillon | New Customer {% endblock title %}

{% block content %}


    <blockquote>
        <h2>New Customer </h2>
    </blockquote>

    <div class="row">
        <div class="col-md-11">
            <form class="form-horizontal" role="form" action="{{ path('new_customer') }}" method="post">
                <fieldset>

                    {{ form_errors(form) }}

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">name :</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Adresse:</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Phone :</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">info :</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.info, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Fax :</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.fax, {'attr': {'class': 'form-control' }}) }}

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <div class="pull-right">
                                        <a class="btn btn-default" href="{{ path('tasks') }}">Cancel</a>
                                        <button type="submit" class="btn btn-info">Save</button>
                                    </div>
                                </div>
                            </div>

                </fieldset>
            </form>
        </div>
        <!-- /.col-lg-12 -->
    </div><!-- /.row -->
{% endblock %}


