{% extends "PapillonTasksBundle::layout.html.twig" %}

{% block title %}Papillon | Adminstration{% endblock title %}

{% block content %}

    <div style="text-align:right;width:100%;">
        <a class="btn btn-default btn-sm" role="button"><span class="glyphicon glyphicon-download"></span> Export CSV</a>
        <a class="btn btn-default btn-sm" role="button"><span class="glyphicon glyphicon-download"></span> Export PDF</a>
        <a class="btn btn-info btn-sm" role="button"><span class="glyphicon glyphicon-plus"></span> Add</a>
    </div>

    <div class="nonborderbox">
        <div class="box-element">
            <div class="box-head-light"><h5>Tasks</h5></div>
            <div class="box-content no-padding grey-bg">

                <table id="users_list" class="display" cellspacing="0" cellpadding="0" border="0">

                    <thead>
                    <tr>
                        <th></th>
                        <th{% if pUsers.isSorted('a.Username') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pUsers, 'Username.', 'a.username') }}</th>
                        <th{% if pUsers.isSorted('a.Email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pUsers, 'Email', 'a.email') }}</th>
                        <th{% if pUsers.isSorted('a.Phone') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pUsers, 'Phone', 'a.phone') }}</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for user in pUsers %}
                        <tr class="{% if loop.index is odd %}dark{% else %}light{%  endif %}">
                            <td><a href="#">{{ user.id }}</a></td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phone }}</td>
                            <td class="button-action">
                                {% if not (user.enabled) %}
                                    <a href="#" type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-lock"></span></a>
                                {% endif %}
                                <a href="#" type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-edit"></span></a>
                                <a href="#" type="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div id="table_info" class="table_info">Showing {{ pUsers.currentPageNumber }} to {{ pUsers.getPaginationData.numItemsPerPage }} of {{ pUsers.getTotalItemCount }} entries</div>

                <div class="navigation">
                    {{ knp_pagination_render(pUsers) }}
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}
