{% extends "PapillonTasksBundle::layout.html.twig" %}

{% block title %}Papillon | New Project {% endblock title %}

{% block content %}


    <blockquote>
        <h2>New Project </h2>
    </blockquote>

    <div class="row">
        <div class="col-md-11">
            <form class="form-horizontal" role="form" action="{{ path('new_project') }}" method="post">
                <fieldset>

                    {{ form_errors(form) }}

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">name :</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Description :</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Type :</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.type, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Opening in :</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.dateOpening, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <label class="col-sm-2 control-label" for="textinput">Closing in :</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.dateClosing, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Customer :</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.customers, {'attr': {'class': 'form-control' }}) }}

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <div class="pull-right">
                                        <a class="btn btn-default" href="{{ path('projects') }}">Cancel</a>
                                        <button type="submit" class="btn btn-info">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <!-- /.col-lg-12 -->
    </div><!-- /.row -->


    <script type="text/javascript">

        $(function () {

            jQuery('#projects_dateOpening').datetimepicker({
                format:'Y-m-d H:i',
                lang:'fr',
                mask:true
            });

            jQuery('#projects_dateClosing').datetimepicker({
                format:'Y-m-d H:i',
                lang:'fr',
                mask:true
            });

        })

    </script>
{% endblock %}


