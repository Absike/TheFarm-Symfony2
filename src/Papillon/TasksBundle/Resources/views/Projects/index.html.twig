{% extends "PapillonTasksBundle::layout.html.twig" %}

{% block title %}Papillon | Projects {% endblock title %}

{% block content %}

    <div style="text-align:right;width:100%;">
        <a class="btn btn-default btn-sm" role="button"><span class="glyphicon glyphicon-download"></span> Export CSV</a>
        <a class="btn btn-default btn-sm" role="button"><span class="glyphicon glyphicon-download"></span> Export PDF</a>
        <a class="btn btn-info btn-sm" role="button"><span class="glyphicon glyphicon-plus"></span> Add</a>
    </div>

    <div class="nonborderbox">
        <div class="box-element">
            <div class="box-head-light"><h5>Mes projets</h5></div>
            <div class="box-content no-padding grey-bg">
                <table id="tasks_list" class="display" cellspacing="0" cellpadding="0" border="0">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Customer</th>
                        <th>Opening</th>
                        <th>Closing</th>
                    </tr>
                    </thead>
                </table>

                <img id="preloading" src="{{ asset('bundles/papillonuser/images/preloader.gif') }}" class="center-block" alt="Loading...">

                <div class="clearfix"></div>
            </div>
        </div>
    </div>


    <script type="text/javascript" charset="utf-8">

        $(function () {


            sendAjaxRequest('{{ path('papillon_all_projects') }}').done(function (data) {

                var aData = [];
                $('#badge_project').html(data.length);

                $.each(data, function (key, value) {

                    aData.push([
                        value['name'],
                        value['type'],
                        value['customers']['name'],
                        dateFormatterZone(value['date_closing'], 'DD MMM YYYY'),
                        dateFormatterZone(value['date_opening'], 'DD MMM YYYY'),
                    ]);

                });


                buildDataTable('#tasks_list', {
                    oSorting: [[0, 'desc']],
                    oData: aData
                });
            })

        });

    </script>

{% endblock %}
