{% extends "PapillonTasksBundle::layout.html.twig" %}

{% block title %}Papillon | Projects {% endblock title %}

{% block content %}

    <div class="container">

        <div class="newtask">
            <h2>Mes projets</h2>
        </div>

        <table id="tasks_list" class="dataTable  table table-striped" cellspacing="1" width="100%">
            <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Customer</th>
                <th>Opening</th>
                <th>Closing</th>
            </tr>
            </thead>
        </table>
    </div>

    <script type="text/javascript" charset="utf-8">

        $(function () {

            sendAjaxRequest('{{ path('papillon_all_projects') }}'
            ).done(function (data) {
                        var tasks = [];
                        $('#badge_project').html(data.length);
                        $.each(data, function (key, value) {

                            tasks.push([
                                value['name'],
                                value['type'],
                                value['customers']['name'],
                                dateFormatter(value['date_closing']),
                                dateFormatter(value['date_opening']),
                            ]);

                        });

                        buildDataTable('#tasks_list', tasks);
                    })

        });

    </script>

{% endblock %}
